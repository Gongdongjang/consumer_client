<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/img_paid_check"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:text="주문이 완료되었습니다"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    해당 계좌로 입금이 완료되면\n      [마이페이지 > 알림센터]로\n주문 확정 알림을 보내드리겠습니다."
        android:textSize="14sp"
        android:textColor="#848484"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#848484"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="입금 확인 시간 : 매일 11-15시 / 18-22시" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        입금 안내 및 주문 확정 사항은\n
[마이페이지 > 알림센터]를 확인해주세요."
        android:textSize="14sp"
        android:textColor="#BEBEBE"
        android:layout_marginTop="44dp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_gray_bar"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:text="최종 주문 내역"
        android:textColor="#151515"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품명"
            android:textSize="12sp"
            android:textColor="#848484" />
        <TextView
            android:id="@+id/Paid_SelectCount"
            android:layout_marginLeft="53dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n개"
            android:textSize="12sp"
            android:textColor="#848484" />
        <TextView
            android:id="@+id/Paid_ToTalPrice"
            android:layout_marginLeft="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n000원"
            android:textSize="12sp"
            android:textColor="#848484" />

        <TextView
            android:id="@+id/Paid_PU_Date"
            android:layout_marginLeft="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="픽업 일시 2021.09.10 10:00"
            android:textSize="12sp"
            android:textColor="#848484" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:text="픽업 장소 안내"
        android:textColor="#151515"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업 매장"
                android:textSize="12sp"
                android:textColor="#848484"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 주소"
                android:textSize="12sp"
                android:textColor="#848484"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Paid_Store_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스토어명"
                android:textSize="12sp"
                android:textColor="#848484" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/Paid_Store_Addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 성북구 동서문로25길 8 1층"
                android:textSize="12sp"
                android:textColor="#848484" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Paid_goHome"
        android:layout_marginLeft="16dp"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#1EAA95"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:text="홈으로 가기" />

    <Button
        android:id="@+id/Paid_goOrderDetail"
        android:layout_marginLeft="16dp"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#1EAA95"
        android:text="주문내역 확인" />



</LinearLayout>

