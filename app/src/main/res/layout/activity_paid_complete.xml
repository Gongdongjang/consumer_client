<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/gotoBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_top_arrow"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="212dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="상세 주문 내역"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/gotoCart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:layout_weight="1"
            android:src="@drawable/ic_cart_shopping" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F6F6F6"/>

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_paid_check"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:text="주문이 완료되었습니다"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    해당 계좌로 입금이 완료되면\n      [마이페이지 > 알림센터]로\n주문 확정 알림을 보내드리겠습니다."
        android:textSize="14dp"
        android:textColor="#848484"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#848484"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:enabled="false"
        android:text="입금 확인 시간 : 매일 11-15시 / 18-22시" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        입금 안내 및 주문 확정 사항은\n
[마이페이지 > 알림센터]를 확인해주세요."
        android:textSize="14dp"
        android:textColor="#BEBEBE"
        android:layout_marginTop="44dp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_gray_bar"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:text="최종 주문 내역"
        android:textColor="#151515"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Paid_MdName"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품명"
            android:textSize="12dp"
            android:textColor="#848484" />
        <TextView
            android:id="@+id/Paid_SelectCount"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n개"
            android:textSize="12dp"
            android:textColor="#848484" />
        <TextView
            android:id="@+id/Paid_ToTalPrice"
            android:layout_marginLeft="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n000원"
            android:textSize="12dp"
            android:textColor="#848484" />
    </LinearLayout>

    <TextView
        android:id="@+id/Paid_PU_Date"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="픽업 일시 2021.09.10 10:00"
        android:textSize="12dp"
        android:textColor="#848484" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:text="픽업 장소 안내"
        android:textColor="#151515"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업 매장"
                android:textSize="12dp"
                android:textColor="#848484"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장 주소"
                android:textSize="12dp"
                android:textColor="#848484"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Paid_Store_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스토어명"
                android:textSize="12dp"
                android:textColor="#848484" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/Paid_Store_Addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 성북구 동서문로25길 8 1층"
                android:textSize="12dp"
                android:textColor="#848484" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Paid_goHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round"
        android:text="홈으로 가기"
        android:stateListAnimator="@null"
        android:textColor="#1EAA95"
        android:textSize="14dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Paid_goOrderDetail"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#1EAA95"
        android:stateListAnimator="@null"
        android:textSize="14dp"
        android:text="주문내역 확인" />



    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
