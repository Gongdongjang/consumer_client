<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/button_round">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp">
        <TextView
            android:id="@+id/homeMdId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeProdImg_item"
            android:layout_width="180dp"
            android:layout_height="153dp"
            android:background="@drawable/button_round"
            android:src="@drawable/img_md_list" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-180dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dDay"
                android:layout_width="36dp"
                android:layout_height="21dp"
                android:background="@drawable/md_item_rectangle"
                android:backgroundTint="@color/main_1"
                android:text="D-99"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/storeLocationFromMe"
                android:layout_width="36dp"
                android:layout_height="21dp"
                android:background="@drawable/md_list_rectangle2"
                android:text="888m"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/homeProdKeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_favorite_border_24" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-12dp"
            android:background="@drawable/button_round">

            <TextView
                android:id="@+id/homeProdName_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스토어명"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_3"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/homeProdEx_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품명"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="14dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 세트"
                    android:textColor="@color/text_3"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/homeProdPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000원"
                    android:layout_marginLeft="4dp"
                    android:textColor="#282828"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/homeProdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="오늘 주문하면 픽업 예정일 1월 25일"
                android:textColor="@color/main_1"
                android:textSize="10sp" />


        </LinearLayout>
</LinearLayout>
