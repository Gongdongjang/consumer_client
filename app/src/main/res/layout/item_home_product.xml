<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/button_round"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homeMdId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeProdImg_item"
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:adjustViewBounds="true"
            android:scaleType = "fitXY"
            android:background="@drawable/border_round_imageview_top"
            android:src="@drawable/img_md_list" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dDay"
                android:layout_width="36dp"
                android:layout_height="21dp"
                android:background="@drawable/md_item_rectangle"
                android:backgroundTint="@color/main_1"
                android:text="D-99"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/storeLocationFromMe"
                android:layout_width="36dp"
                android:layout_height="21dp"
                android:background="@drawable/md_list_rectangle2"
                android:text="888m"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="8sp" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:background="@drawable/button_round"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homeProdName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:text="스토어명"
            android:textColor="@color/text_3"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeProdEx_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:text="제품명"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 세트"
                android:textColor="@color/text_3"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeProdPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="10,000"
                    android:textColor="#282828"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="#282828"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_pu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="10dp"
                android:text="오늘 주문하면 픽업 예정일 "
                android:textColor="@color/main_1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/StoreProdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="1월 25일"
                android:textColor="@color/main_1"
                android:textSize="10sp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
