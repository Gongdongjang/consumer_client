        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Pay_Agree1"
                android:text="개인정보 수집에 동의"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/Pay_Agree1_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:textSize="12sp"
                android:textColor="#F75D39" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Pay_Agree2"
                android:text="개인정보 제 3자 제공 동의"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/Pay_Agree2_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:textSize="12sp"
                android:textColor="#F75D39"  />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Pay_Agree3"
                android:text="구매 유의 사항 확인"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/Pay_Agree3_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:textSize="11dp"
                android:textColor="#F75D39" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="* 공동구매는 계획과 달리 진행될 수 있습니다.\n진행 과정에서 계획이 지연, 변경되거나 무산될 수도 있습니다."
            android:textSize="10dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Pay_Agree4"
                android:text="베타 테스트 일회성 판매 동의"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/Pay_Agree4_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:textSize="11dp"
                android:textColor="#F75D39" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="*본 공동구매는 ‘일회성 판매'로, 추후 다시 판매되지 않습니다.\n베타 테스트를 위한 판매로 현금영수증 발급이 불가합니다."
            android:textSize="9dp"/>

        <Button
            android:id="@+id/Pay_Off_Btn"
            android:layout_width="368dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textColor="#BEBEBE"
            android:textStyle="bold"
            android:backgroundTint="#F1F1F1"
            android:text="결제하기" />
        <Button
            android:id="@+id/Pay_On_Btn"
            android:visibility="gone"
            android:layout_width="368dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#1EAA95"
            android:text="결제하기" />


    </LinearLayout>

