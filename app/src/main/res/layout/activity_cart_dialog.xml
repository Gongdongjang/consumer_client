<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/CartDialogProdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품명"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은 수량 "
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/CartDialogRemainNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:layout_margin="2dp"
                    android:id="@+id/CartDialogMinusBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:text="-"
                    android:padding="0dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/box"
                    android:text="n"
                    android:textSize="20sp"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_margin="2dp"
                    android:id="@+id/CartDialogPlusBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:text="+"
                    android:padding="0dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업 날짜"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginRight="40dp"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/PickUpDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/btn_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_calendar_today_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업 시간"
                android:layout_marginRight="40dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/PickUpTime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/btn_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_access_time_24"
                android:backgroundTint="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/BringBasketCheck"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:checked="false"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="장바구니 지참 사항 확인했습니다. *"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="본 상품 픽업 시, 현장에서 봉투 구매가 어렵습니다."
                    android:textSize="13sp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4E4E4"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 수량"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/CartDialogTotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 금액"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/CartDialogTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n,000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/purple_700"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/JP_KeepBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <ImageView
                android:id="@+id/JP_CartBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_baseline_order_24" />

            <Button
                android:id="@+id/JP_OrderBtn"
                android:layout_width="231dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="35dp"
                android:background="#F6F6F6"
                android:backgroundTint="#FFFFFF"
                android:text="주문하기"
                android:textColor="#000000"
                android:textStyle="bold"
                app:iconTint="#FFFFFF"
                app:rippleColor="#FFFFFF"
                app:strokeColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>