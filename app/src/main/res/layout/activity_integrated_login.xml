<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="clip_vertical"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/integ_login"
                    android:alpha="0.3"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:alpha="0.9"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/ic_logo1"
                    android:gravity="center_horizontal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_round"
                    android:text="3초 만에 간편 로그인하기"
                    android:layout_gravity="center"
                    android:textColor="@color/purple_700"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="430dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/kakaobutton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@null"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/kakaotalk_icon" />

                    <ImageButton
                        android:id="@+id/googleBtn"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@null"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/btn_google_light_normal_xhdpi" />
                </LinearLayout>

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_round"
                android:text="3초 만에 간편 로그인하기"
                android:textAlignment="center"
                android:stateListAnimator="@null"
                android:textColor="@color/purple_700"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/kakaobutton"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginTop="3dp"
                    android:scaleType="fitStart"
                    android:stateListAnimator="@null"
                    app:srcCompat="@drawable/kakaotalk_icon" />
                <ImageButton
                    android:id="@+id/googleBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    app:srcCompat="@drawable/btn_google_light_normal_xhdpi" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round2"
                android:text="아이디로 로그인"
                android:stateListAnimator="@null"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:text="회원가입"
                android:stateListAnimator="@null"
                android:textColor="#1EAA95"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!--        <ImageView-->
            <!--            android:id="@+id/ll_naver_login"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_constraintBottom_toBottomOf="parent"-->
            <!--            android:layout_constraintEnd_toEndOf="@+id/tv_kakao2"-->
            <!--            android:layout_constraintStart_toStartOf="parent"-->
            <!--            android:layout_constraintTop_toTopOf="parent"-->
            <!--            android:src="@drawable/sns_naver" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/find"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="아이디/비밀번호를 잊으셨나요?"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>