<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatmessage_item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/StoreProdImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/StoreName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="스토어명"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/StoreLocationFromMe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="n00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"/>

            </LinearLayout>

            <TextView
                android:id="@+id/StoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스토어 한 줄 설명"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/StoreProdPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="휴무일"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/StorePickUpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="운영시간"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/StoreRestDays"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="nnnn.nn.nn"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/StoreHours"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="n시~n시"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

</LinearLayout>

